<% if(theme.notice) { %>
  <div class="notice">
    <div class="nContent">
      <p>
        <%- theme.notice %>
      </p>
    </div>
  </div>
<% } %>
<div id="index-header" class="wrap-bd clearfix" style="width: initial; height: 100%; display: flex; flex-direction: column; align-items: center; box-shadow: 0 12px 15px 0px rgb(154 154 154 / 10%);">
  <div class="head-img-body" style="width: 10rem; height: 10rem; border-radius: 50%; margin-top: -6rem; overflow: hidden; transform: rotate3d(0); background-color: #fff;">
    <img class="au-head" src="<%- theme.userhead %>" alt="头像" title="这是头像！" style="box-sizing: border-box; width: 100%; height: 100%; border-radius: 50%; border: 5px solid transparent; box-shadow: 0 -20px 20px -20px rgb(0 0 0 / 40%);">
  </div>
  <h1 class="animate__fadeInUp" style="display: inline-block;">
    <a class="header-img" href="/" target="_self" title="LERNB" style="background-image: url('<%- theme.headImg %>');">
      <%- theme.sitename %>
    </a>
  </h1>
  <ul id="header-btn" class="index-header-btn animate__fadeInUp" style="float: initial; margin-left: 0; margin-top: 1rem;">
    <li>
      <% if (is_home()){ %>
      <a href="/" class="hoverLine hoverLineActive" style="padding-left: 0;">主页</a>
      <% } else { %>
      <a href="/" class="hoverLine" style="padding-left: 0;">主页</a>
      <% } %>
    </li>
    <li>
      <% if (is_archive()){ %>
      <a href="/p" class="hoverLine hoverLineActive" style="padding-left: 0;">文章</a>
      <% } else { %>
      <a href="/p" class="hoverLine" style="padding-left: 0;">文章</a>
      <% } %>
    </li>
    <li>
      <% if (page.title == 'note' || page.type == 'note'){ %>
      <a href="/note/note-intro.html" class="hoverLine hoverLineActive" style="padding-left: 0;">学习</a>
      <% } else { %>
      <a href="/note/note-intro.html" class="hoverLine" style="padding-left: 0;">学习</a>
      <% } %>
    </li>
  </ul>
  <div class="hello">
    <span class="firstS"></span>
  </div>
  <script>
    var typed = new Typed('.firstS', {
      strings: ["哈喽！很高兴被你发现"],
      typeSpeed: 100,
      backSpeed: 80,
      backDelay: 500,
      startDelay: 600,
      loop: false,
      showCursor: false
    });
  </script>
</div>

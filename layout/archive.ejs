<%- partial('_partial/category-heading') %>
<!-- <div class="zuijin" style="font-size: 2rem; font-weight: bold;">最近</div> -->
<div class="a-index-cate-h">
  <span class="a-index-cate-content">最近</span>
  <% if (page.total> 1){ %>
    <div id="a-index-pageNav" style="display: inline-block; clear: both; margin-left: auto;">
      <% var prev_text=__('<');var next_text=__('>') %>
        <%- paginator({ prev_text: prev_text, next_text: next_text}) %>
    </div>
  <% } %>
</div>
<div id="a-index">
  <% page.posts.each(function (post) { %>
    <div class="a-list-item">
      <a class="a-list-item-img" href="<%- url_for(post.path) %>">
        <img src="<%- post.img %>" alt="文章封面">
      </a>
      <div class="a-list-item-content">
        <div class="a-list-item-content-cate">
          <%- list_tags(post.categories, { show_count: false }) %>
          <span>
            <%- date(post.date, "YYYY-MM-DD" ) %>
          </span>
        </div>
        <h1>
          <a href="<%- url_for(post.path) %>" title="<%- post.title %>">
            <%= post.title %>
          </a>
        </h1>
      </div>
    </div>
    <% }) %>
</div>
<% if (page.total> 1){ %>
  <div id="pageNav" style="clear: both;">
    <% var prev_text=__('上一页');var next_text=__('下一页') %>
      <%- paginator({ prev_text: prev_text, next_text: next_text }) %>
  </div>
<% } %>

<% site.categories.map(function(category){ %>
  <div class="a-index-cate-h">
    <span class="a-index-cate-content"><%= category.name %></span>
    <a href="/categories/<%- category.name %>/" class="a-index-more">浏览全部</a>
  </div>
  <div class="a-index-cate-wrap" style="display: flex; justify-content: space-between; margin-left: -.6rem; margin-right: -.6rem; margin-bottom: 40px;">
    <div id="a-index" class="a-index-cate" style="width: 41%; margin-left: initial; margin-right: initial; margin-bottom: initial;">
      <% category.posts.sort('-date').limit(1).map(function(post, i){  %>
        <div class="a-list-item" style="width: 100%; margin-bottom: initial;">
          <div class="a-list-item-img">
            <a href="<%- url_for(post.path) %>" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; display: inline-block;">
              <img src="<%- post.img %>" alt="文章封面" style="position: initial; width: 100%; height: 100%;">
              <span class="overhid" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(to bottom, rgb(49, 49, 48, 0), rgba(22, 29, 39, .9)); opacity: .5;"></span>
            </a>
            <div class="a-list-item-content" style="position: absolute; bottom: 0; left: 0; right: 0; padding: .6rem; z-index: 1;">
              <h1>
                <a href="<%- url_for(post.path) %>" title="<%- post.title %>" style="display: block; color: #fff; font-weight: initial; font-size: 1rem;">
                  <%= post.title %>
                </a>
              </h1>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <div id="a-index" class="a-index-cate" style="align-content: flex-start; width: 59%; margin-left: initial; margin-right: initial; margin-bottom: initial;">
      <% category.posts.sort('-date').limit(6).map(function(post, i){  %>
        <div class="a-list-item" style="width: 33.33%; margin-bottom: initial;">
          <div class="a-list-item-img">
            <a href="<%- url_for(post.path) %>" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; display: inline-block;">
              <img src="<%- post.img %>" alt="文章封面" style="position: initial; width: 100%; height: 100%;">
              <span class="overhid" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: linear-gradient(to bottom, rgb(49, 49, 48, 0), rgba(22, 29, 39, .9)); opacity: .5;"></span>
            </a>
            <div class="a-list-item-content" style="position: absolute; bottom: 0; left: 0; right: 0; padding: .6rem; z-index: 1;">
              <h1>
                <a href="<%- url_for(post.path) %>" title="<%- post.title %>" style="display: block; color: #fff; font-weight: initial; font-size: .85rem;">
                  <%= post.title %>
                </a>
              </h1>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div> 
<% }) %>
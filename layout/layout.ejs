<!-- <body onload="prettyPrint();" class="line-numbers"> 旧款代码高亮 -->
  <%- partial('_partial/header') %>
    <div class="wrap clearfix">
      <% if (!is_post() && !is_tag() && page.type != 'tags' && page.type != 'note') { %>
        <div class="banner-back" style="position: relative;">
          <div class="bannerBg" style="position: fixed; top: 0; left: 0; right: 0; height: 280px; background: #25566b url('<%- theme.bannerBg %>') center 50% no-repeat; background-size: cover;"></div>
          <div class="banner-content">
            <img class="au-head" src="<%- theme.userhead %>" alt="头像" title="这是头像！">
          </div>
        </div>
      <% } %>
  <% if (is_post() || is_tag() || page.type == 'tags' || page.type == 'note'){ %>
  <div class="main" style="padding-top: 60px; box-shadow: initial;">
  <% } else { %>
    <div class="main">
  <% } %>
    <div class="wrap-content clearfix">
      <% if (page.type != 'note' && page.type != 'resume') { %>
      <div class="bar barbar">
        <!-- <div class="barside"> -->
        <!-- S 侧栏插件 -->
        <% if (is_home() && theme.showAuthor){ %>
        <%- partial('_partial/author') %>
        <% } %>

        <!-- 最近文章 -->
        <% if (!is_home() && theme.showRecent){ %>
        <%- partial('_partial/recent') %>
        <% } %>

        <!-- <hr style="border: 0;border-top: 1px solid #eaecef;"> -->

        <!-- 分类 -->
        <% if (page.type != 'categories' && theme.showCategory){ %>
          <%- partial('_partial/category') %>
        <% } %>
          
        <!-- <hr style="border: 0;border-top: 1px solid #eaecef;"> -->
          
        <!-- 归档 -->
        <% if (theme.showArchive){ %>
          <%- partial('_partial/archive') %>
        <% } %>
            
        <!-- 标签 -->
        <% if (page.type != 'tags' && theme.showTag){ %>
          <%- partial('_partial/tag') %>
        <% } %>

        <!-- 文章目录 -->
        <% if (is_post() && theme.showPostMenu){ %>
          <%- partial('_partial/menu') %>
        <% } %>
        <!-- E 侧栏插件 -->
        </div>
        <% } %>
        <!-- <%- theme.notice %> -->
        <%- body %>
      </div>
    </div>
    </div>
    <% if (page.type != 'note'){ %>
      <%- partial('_partial/footer') %>
    <% } %>
  <script id="layout-js"></script>
  <script type="text/javascript">
    let layoutJs = document.getElementById('layout-js');
    if (screen.width < 1236) {
      layoutJs.setAttribute('src', '/js/layout-m20200920.js?v=0421');
    }
  </script>
</body>

</html>